/*
2022          2022
   2022     2022
     20222022
       2022
       2022
       2022
       2022
       */
#include <stdio.h>
int main()
{
	int i=0,j=0,k=0,spc=1;
   for(i=4;i>=1;i--)
   {
         for(k=spc;k>=1;k--)
            {
              printf(" ");
            }
   for(j=1;j<=i;j++)
   {
   if(j==i||j==1)
    printf("2022");
    else
    printf("    ");
}
 printf("\n");
    spc+=2;
    }
    i=0;j=0;k=0;
    for(i=1;i<=2;i++)
   {
    for(j=1;j<=i;j++)
   {
   
    printf("       2022\n");
    
    }
}
   
}
