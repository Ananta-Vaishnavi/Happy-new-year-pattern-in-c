/*
20222022     2022
2022 2022    2022
2022  2022   2022
2022   2022  2022
2022    2022 2022
2022     20222022
*/
#include <stdio.h>
int main()
{
   int i=0,j=0,k=0,spc=1,l=0,spc1=5;
   for(i=1;i<=6;i++)
   {
         for(j=1;j<=17;j++)
   {
     if(j==1||(j==2&&i==1))
     printf("2022");
     
    }
    if(i>=2)
    {
    	for(k=1;k<=spc;k++)
    	{
    		printf(" ");
		}
		printf("2022");
		spc++;
	}
	k=0;
		for(l=1;l<=spc1;l++)
		{
			printf(" ");
		}
		spc1--;
		printf("2022");
		
	
     printf("\n");

  }}
